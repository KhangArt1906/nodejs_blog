<div class="mt-4">
  <h3>Dang Khoa Hoc</h3>

  <form method="post" action="/courses/store">
    <div class="form-group">
      <label for="name">Ten khoa hoc</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>

    <div class="form-group">
      <label for="description">Mo ta khoa hoc</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
      />
    </div>

    <div class="form-group">
      <label for="videoID">Video ID</label>
      <input type="text" class="form-control" id="videoID" name="videoID" />
    </div>

    <div class="form-group">
      <label for="level">Trinh do</label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>

    <button type="submit" class="mt-4 btn btn-primary">Them Khoa Hoc</button>
  </form>
</div>